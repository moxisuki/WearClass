<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginTop="10dp"
              android:gravity="center_horizontal"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:layout_width="175dp"
            android:layout_height="50dp">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#D8D8D8"
                app:cardCornerRadius="9dp"
        >
            <TextView
                    android:text="上午第一节"
                    android:layout_width="35dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:textColor="#ff3D3D3D"
                    android:textSize="7sp"
                    android:gravity="start|top"
                    android:alpha="1"
                    android:id="@+id/table_class_order"
                    tools:ignore="SmallSp"/>

            <!-- 早读 -->

            <TextView
                    android:text="早读"
                    android:id="@+id/table_class_name"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:textColor="#ff3D3D3D"
                    android:textSize="30sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:alpha="1"
            />
            <!-- 语文早读 -->

            <TextView
                    android:text="张老师"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="96dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="11dp"
                    android:textColor="#ff3D3D3D"
                    android:textSize="12.5sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:alpha="1"
            />
            <!-- 7:05-7:37 -->

            <TextView
                    android:text="7:05-7:37"
                    android:layout_width="53.5dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="94.25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="25.5dp"
                    android:textColor="#ff3D3D3D"
                    android:textSize="12.5sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:alpha="1"
            />
            <TextView
                    android:text="C204"
                    android:textStyle="bold"
                    android:layout_width="20dp"
                    android:layout_height="11.5dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="145dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:textColor="#ff3D3D3D"
                    android:textSize="11sp"
                    android:gravity="start|top"
                    android:alpha="1"
                    tools:ignore="SmallSp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>